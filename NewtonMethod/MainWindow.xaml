        <TextBox x:Name="txtF" HorizontalAlignment="Left" Height="25" Margin="20,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" ToolTip="f(x,y)"/>
        <TextBox x:Name="txtG" HorizontalAlignment="Left" Height="25" Margin="20,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" ToolTip="g(x,y)"/>
